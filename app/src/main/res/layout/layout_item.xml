<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/li_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
            android:id="@+id/li_tv_heading"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:padding="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:text="main heading display here"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/li_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="6"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:text="main content"/>

                <ImageView
                    android:id="@+id/li_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@color/design_default_color_primary"/>

            </LinearLayout>

            <TextView
                android:id="@+id/li_tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By Avashh"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="@color/purple_200"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/li_tv_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="Published at"
                android:textStyle="bold"
                android:textSize="12sp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>